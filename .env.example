# Environment variables for the Auth Monorepo

# Application
PORT=3000
NODE_ENV=development

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/auth_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (JSON Web Token)
JWT_SECRET=supersecretjwtkey
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10

# Email Service (e.g., Resend, Mailgun, SendGrid)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=support@example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_VERIFY_EMAIL_WINDOW_MS=3600000
RATE_LIMIT_VERIFY_EMAIL_MAX_REQUESTS=5

# Internationalization (i18n)
DEFAULT_LOCALE=en
FALLBACK_LOCALE=en
I18N_DEBUG=false
I18N_NS=auth,email,queue,system,token,validation,worker

# Other
# Add any other environment variables specific to your application here
